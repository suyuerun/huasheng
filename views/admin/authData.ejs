<script>
	function applyPass() {
		if(confirm('确定审核通过吗？')) { //js 弹询问框
			location.href = '/admin/applyPass?id=<%-rs.id%>'; //本页面提交
		}
	}

	function applyRefuse() {
		$('#applyInfoTable').hide();
		$('#refuseInfoTable').show();
	}

	function onback() {
		$('#refuseInfoTable').hide();
		$('#applyInfoTable').show();
	}
</script>
<table align='center' height='213px' align="center" id="applyInfoTable">
	<tr>
		<td align='right'>真名:</td>
		<td>
			<%-rs.realname %>
		</td>
	</tr>
	<tr>
		<td align='right'>身份证号:</td>
		<td>
			<%-rs.idcode%>
		</td>
	</tr>
	<tr>
		<td align='right'>电话:</td>
		<td>
			<%-rs.phone%>
		</td>
	</tr>
	<tr>
		<td align='right'>email:</td>
		<td>
			<%-rs.email%>
		</td>

	</tr>
	<tr>
		<td align='right'>地址:</td>
		<td>
			<%-rs.address%>
		</td>
	</tr>
	<tr>
		<td align='right'>身份证照片:</td>
		<td>
			<img src="<%-rs.idphoto%>" style="width: 100px;height: auto;" />
		</td>
	</tr>
	<tr>
		<td align='right'>手持身份证照片:</td>
		<td>
			<img src="<%-rs.userphoto%>" style="width: 100px;height: auto;" />
		</td>
	</tr>
	<tr>
		<td align='center' colSpan='2'>
			<input type="button" class="btn btn-primary" value='审核通过' onclick="applyPass()" />&nbsp;
			<input type="button" class="btn btn-primary" value='审核驳回' onclick='applyRefuse()' />
		</td>
	</tr>
</table>
<form id="refuseInfoTable" action="./applyRefuse" method="post" style="display:none">

	<table id="refuseInfoTable" align='center' height='213px' align="center" >
		<tr>
			<td>
				驳回理由：<br>
				<textarea name='message' cols='69' rows='9' style="text-align: left;">
			</textarea>
			</td>
		</tr>
		<tr>
			<td align="center">
				<input type="hidden" name="id" value='<%-rs.id%>' />
				<input type="submit" class="btn btn-primary" value='驳回' />&nbsp;
				<input type="button" class="btn btn-primary" value='返回' onclick='onback()' />
			</td>
		</tr>

	</table>
</form>